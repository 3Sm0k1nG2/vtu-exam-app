@model dynamic
@{
    ViewData["Title"] = "Menu Page";
}

@section AddToHead{
    <link type="text/css" rel="stylesheet" href="~/css/menuPage.css"></link>
}

@section AddToBottom{
    <script src="~/js/menuPage.js" asp-append-version="true"></script>
}

<div>
    <form method="get" class="d-flex" enctype="application/x-www-form-urlencoded">
        <input class="form-control me-2" type="search" name="query" placeholder="Търси съдържание в заглавието или описанието на ястията" aria-label="Search" value="@Model.prevQuery">
        <button class="btn btn-outline-success" type="submit">Търси</button>
    </form>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @if (Model.models != null)
    {
        @foreach (DishModel dish in Model.models)
        {
            <div class="card dish">
                <img src="@dish.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@dish.Name</h5>
                    <p class="card-text text-secondary">@dish.Grams грама</p>
                    <p class="card-text">@dish.Description</p>
                </div>
                <div class="m-2">
                    <a href="/menu/details/@dish.Id" class="btn btn-primary">Детайли</a>
                    <a href="/cart/add/@dish.Id" class="btn btn-primary">Добави</a>
                </div>
            </div>
        }
    }
    else
    {
        <h1 class="mx-auto m-5 text-secondary">Няма ястия.</h1>
    }
</div>

