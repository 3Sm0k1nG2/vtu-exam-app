@model DishModel
@{
    ViewData["Title"] = "Creation Page";
}

<form action="/dish/create" method="POST" enctype="application/x-www-form-urlencoded">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" name="Name" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="Grams" class="form-label">Grams</label>
        <input type="number" name="Grams" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input type="number" step="0.01" name="Price" class="form-control" required>
    </div>
        <div class="mb-3">
        <label for="ImageUrl" class="form-label">Image Url</label>
        <input type="text" name="ImageUrl" class="form-control" required>
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="imgAsUrl">
        <label class="form-check-label" for="imgAsUrl">Image is URL</label>
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <input type="text" name="Description" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<script src="~/js/createDish.js" asp-append-version="true"></script>